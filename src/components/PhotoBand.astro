---
import { Picture } from "astro:assets";

import forest from "../assets/colorado forest wholeness.jpeg";
import caseShot from "../assets/case study wholeness.jpeg";

const photos = [
  { src: forest, alt: "Colorado forest — Wholeness" },
  { src: caseShot, alt: "Case study — Wholeness" },
];
---

<section class="mx-auto max-w-6xl px-6 py-12">
  <div class="grid gap-4 md:grid-cols-2">
    {
      photos.map((p) => (
        <Picture
          src={p.src}
          alt={p.alt}
          widths={[480, 768, 1200, 1600]}
          formats={["avif", "webp", "jpeg"]}
          sizes="(min-width: 1024px) 45vw, 100vw"
          class="h-56 w-full rounded-2xl object-cover ring-1 ring-juniper/10 md:h-64"
          loading="lazy"
          decoding="async"
        />
      ))
    }
  </div>
</section>
