---
import Base from "../layouts/Base.astro";
---

<Base title="Testimonials" description="Stories from our community.">
  <section class="relative overflow-hidden text-juniper">
    <img
      src="/uploads/twc-brand-b.png"
      alt=""
      class="absolute inset-0 h-full w-full object-cover"
    />
    <div class="relative mx-auto max-w-4xl px-6 py-24">
      <h1 class="font-display text-4xl md:text-5xl">Testimonials</h1>
      <p class="mt-4 max-w-2xl text-lg opacity-80">Real words, real change.</p>
    </div>
  </section>
  <section class="mx-auto max-w-3xl space-y-10 px-6 py-16">
    <blockquote class="rounded-xl bg-white/60 p-6 ring-1 ring-juniper/10 backdrop-blur">
      “Welcome home.” <footer class="mt-2 opacity-70">— Client, 2025</footer>
    </blockquote>
    <blockquote class="rounded-xl bg-white/60 p-6 ring-1 ring-juniper/10 backdrop-blur">
      “Return to self.” <footer class="mt-2 opacity-70">— Client, 2025</footer>
    </blockquote>
  </section>
</Base>
